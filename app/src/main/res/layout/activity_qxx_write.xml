<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".message.Qxx_WriteActivity">

    <cn.hsd.student.message.Qxx_TopLine
        android:textColor="#ffffff"
        android:gravity="center" 
        android:id="@+id/qxx_writedate"
        android:background="@drawable/shapetop"
        android:layout_width="300.0dip"
        android:layout_height="30.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_centerHorizontal="true" />
    <cn.hsd.student.message.Qxx_DrawLine
        android:textSize="18.0sp"
        android:textColor="#ff000000"
        android:gravity="top"
        android:id="@+id/qxx_edittext"
        android:background="@drawable/shape2"
        android:scrollbars="vertical"
        android:layout_width="300.0dip"
        android:layout_height="108.0dip"
        android:layout_below="@+id/qxx_writedate"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="3.0dip" />

    <Button
        android:id="@+id/qxx_send"
        android:background="@drawable/shape" 
        android:layout_width="100dp"
        android:layout_height="wrap_content" 
        android:layout_marginTop="30.0dip"
        android:text="发送"
        android:layout_below="@+id/qxx_edittext"
        android:layout_alignRight="@+id/qxx_edittext" />
    <Button
        android:id="@+id/qxx_cancel"
        android:background="@drawable/shape" 
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="取消" 
        android:layout_below="@+id/qxx_edittext"
        android:layout_alignBaseline="@+id/qxx_send"
        android:layout_alignLeft="@+id/qxx_edittext" />
</RelativeLayout>
