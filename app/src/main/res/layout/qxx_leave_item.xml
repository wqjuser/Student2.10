<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:text="请假条"
        android:textColor="#000"
        android:layout_marginTop="5dip"
        android:gravity="center" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:background="@drawable/qxx_frametop">

            <TextView
                android:text="建表时间："
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"

                />

            <TextView
                android:id="@+id/qxx_create_time"
                android:text="2016-11-06"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </TableRow>

        <TableRow android:background="@drawable/qxx_frame">

            <TextView
                android:text="申请学生："
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:id="@+id/qxx_name"
                android:text="李明明"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

        </TableRow>

        <TableRow android:background="@drawable/qxx_frame">

            <TextView
                android:text="请假类型："
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="#000" />

            <TextView
                android:id="@+id/qxx_style"
                android:text="病假"
                android:textColor="#000"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/qxx_daynum"
                android:text="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:text="天"
                android:textColor="#000"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="9" />
        </TableRow>

        <TableRow android:background="@drawable/qxx_frame">

            <TextView
                android:text="请假时间："
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:layout_weight="3"
                android:textColor="#000"

                />

            <TextView
                android:id="@+id/qxx_leave_begin"
                android:text="2016-11-03"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"

                />

            <TextView
                android:text="到"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:id="@+id/qxx_leave_end"
                android:text="2016-11-03"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"

                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/qxx_frame">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假内容："
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/qxx_content"
                    android:layout_width="284dp"
                    android:layout_height="wrap_content"
                    android:padding="5dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="我们都有一个家名字叫中国，兄弟姐妹都很多景色也不错" />

            </LinearLayout>

        </TableRow>

        <TableRow android:background="@drawable/qxx_frame">

            <TextView
                android:text="指导教师："
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:id="@+id/qxx_teacher"
                android:text="付伟"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </TableRow>

        <TableRow android:background="@drawable/qxx_framebottom">

            <TextView
                android:text="辅导员："
                android:layout_width="0dip"
                android:layout_height="20dip"
                android:layout_weight="1"
                android:textColor="#000" />

            <TextView
                android:id="@+id/qxx_counsellor"
                android:text="翟德斌"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/qxx_chuli"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>


</LinearLayout>